pipeline {
    agent {
        docker {
            image 'maven:3.9.8-eclipse-temurin-17'
            args '-v /var/run/docker.sock:/var/run/docker.sock -v $HOME/.m2:/root/.m2'
        }
    }

    environment {
        GIT_URL          = 'https://github.com/bhupal2027/Spring_boot_APP_CI-CD'
        SONARQUBE_ID     = 'SonarQubeServer'
        IMAGE_NAME       = 'springboot-demo'
        DOCKERHUB_CREDS  = 'dockerhub-creds'
    }

    stages {

        /* -------------------- CHECKOUT -------------------- */
        stage('Checkout') {
            steps {
                git branch: 'master', url: "${GIT_URL}"
            }
        }

        /* -------------------- SONAR QUBE SCAN -------------------- */
        stage('SonarQube Scan') {
            steps {
                dir('spring-boot-app') {
                    withSonarQubeEnv("${SONARQUBE_ID}") {
                        withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
                            sh """
                            mvn clean verify sonar:sonar \
                                -DskipTests \
                                -Dsonar.projectKey=${IMAGE_NAME} \
                                -Dsonar.token=$SONAR_TOKEN
                            """
                        }
                    }
                }
            }
        }

        /* -------------------- QUALITY GATE -------------------- */
        stage('Quality Gate') {
            steps {
                timeout(time: 15, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        /* -------------------- BUILD JAR -------------------- */
        stage('Build JAR') {
            steps {
                dir('spring-boot-app') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        /* -------------------- DOCKER IMAGE BUILD -------------------- */
        stage('Build Docker Image') {
            steps {
                dir('spring-boot-app') {
                    sh """
                    docker build -t ${IMAGE_NAME}:latest .
                    """
                }
            }
        }

        /* -------------------- SECURITY SCAN -------------------- */
        stage('Trivy Scan') {
            steps {
                sh """
                trivy image --exit-code 1 --severity HIGH,CRITICAL ${IMAGE_NAME}:latest
                """
            }
        }

        /* -------------------- PUSH TO DOCKER HUB -------------------- */
        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDS}",
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh """
                    echo "$PASS" | docker login -u "$USER" --password-stdin
                    docker tag ${IMAGE_NAME}:latest $USER/${IMAGE_NAME}:latest
                    docker push $USER/${IMAGE_NAME}:latest
                    docker logout
                    """
                }
            }
        }
    }
}
